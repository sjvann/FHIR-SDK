<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    
    <!-- NuGet 套件資訊 -->
    <PackageId>Fhir.R5.Models</PackageId>
    <Version>5.0.0</Version>
    <Authors>FHIR SDK Team</Authors>
    <Description>FHIR R5 Resource Models - Generated from official FHIR R5 definitions</Description>
    <PackageTags>FHIR;R5;Healthcare;HL7;Models</PackageTags>
    <PackageProjectUrl>https://github.com/your-org/FHIR-SDK</PackageProjectUrl>
    <RepositoryUrl>https://github.com/your-org/FHIR-SDK</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    
    <!-- 文件生成 -->
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(AssemblyName).xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <!-- 參照共用介面和基礎框架 -->
    <ProjectReference Include="..\Fhir.Abstractions\Fhir.Abstractions.csproj" />
    <ProjectReference Include="..\Fhir.Support\Fhir.Support.csproj" />
  </ItemGroup>

  <ItemGroup>
    <!-- JSON 序列化支援 -->
    <PackageReference Include="System.Text.Json" Version="8.0.0" />
    <PackageReference Include="System.ComponentModel.Annotations" Version="5.0.0" />
  </ItemGroup>

</Project>
