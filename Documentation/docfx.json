{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          // 直接指定要處理的 .csproj 檔案的路徑
          // 這個路徑是相對於 docfx.json 所在的目錄 (Documentation/)
          "files": ["../Fhir.Models/Fhir.Models.csproj"]
        }
      ],
      "dest": "api" // API 文件的輸出目錄，在 DocFX 目錄下的 api 子目錄
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "./_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "",
      "_appTitle": "",
      "_enableSearch": true,
      "pdf": true
    }
  }
}