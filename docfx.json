{
  "$schema": "https://raw.githubusercontent.com/dotnet/docfx/main/schemas/docfx.schema.json",
  "metadata": [
    {
      "src": [
        {
          "files": [
            "Fhir.Models/**/*.csproj",
            "Fhir.Serialization.Json/**/*.csproj",
            "Fhir.Serialization.Xml/**/*.csproj",
            "Fhir.Validation/**/*.csproj",
            "Fhir.Support/**/*.csproj"
          ],
          "src": "."
        }
      ],
      "dest": "api",
      "properties": {
        "TargetFramework": "net9.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "**/*.{md,yml}"
        ],
        "exclude": [
          "_site/**"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**"
        ]
      }
    ],
    "output": "_site",
    "template": [
      "default",
      "modern"
    ],
    "globalMetadata": {
      "_appName": "FhirSDK",
      "_appTitle": "FhirSDK",
      "_enableSearch": true,
      "pdf": true
    }
  }
}